<%- include('../partials/header.ejs')%>
    <div class="container">
        <form action = '/connections/newConnection' method = 'POST' class="newConnection-form">
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Topic</label>
                <div class="col-sm-10">
                <input type="text" name = 'topic' class="form-control" placeholder="Enter the topic" required>
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Title</label>
                <div class="col-sm-10">
                    <input type="text" name = 'title' class="form-control" placeholder="Enter the Title" required>
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Host</label>
                <div class="col-sm-10">
                    <input type="text" name = 'host' class="form-control" placeholder="Enter the host Name" required>
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Details</label>
                <div class="col-sm-10">
                    <textarea class="form-control" name = 'details' placeholder="Description of the event" required minlength="10"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Where</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control"  name = 'where' placeholder="Location" required>
                </div>
                <!-- <label  class="col-sm-2 col-form-label" >When</label>
                <div class="col-sm-4">
                    <input type="date" class="form-control"  name = 'when'>
                </div> -->
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Start</label>
                <div class="col-sm-4">
                    <input type="datetime-local"  name = 'startTime' class="form-control" required>
                </div>
            
                <label  class="col-sm-2 col-form-label" >End</label>
                <div class="col-sm-4">
                    <input type="datetime-local"  name = 'endTime' class="form-control" required>
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Image URL</label>
                <div class="col-sm-10">
                    <input type="text" name = 'imageURL' class="form-control" placeholder="Enter the Image URL for the event" required>
                </div>
            </div>
            <div class="btn-submit">
                <button class="btn btn-primary">Submit</button>
                <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
            </div>
        </form>
    </div>  
    <%- include('../partials/footer.ejs')%>
</body>
</html>