<%- include('../partials/header.ejs')%>
    <div class="container">
        <form action = '/connections/<%= connection._id%>/?_method=PUT' method = 'POST' class="newConnection-form">
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Topic</label>
                <div class="col-sm-10">
                <input type="text" name = 'topic' class="form-control" value="<%= connection.topic%>" required>
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Title</label>
                <div class="col-sm-10">
                    <input type="text" name = 'title' class="form-control" value="<%= connection.title%>" required>
                </div>
            </div>
            <!-- <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Host</label>
                <div class="col-sm-10">
                    <input type="text" name = 'host' class="form-control" value="<%= connection.host%>" required>
                </div>
            </div> -->
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Details</label>
                <div class="col-sm-10">
                    <textarea class="form-control" name = 'details' required minlength="10"><%= connection.details%></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Where</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control"  name = 'where' value="<%= connection.where%>" required>
                </div>
                <!-- <label  class="col-sm-2 col-form-label" >When</label>
                <div class="col-sm-4">
                    <input type="date" class="form-control"  name = 'when' value="<%= connection.when%>">
                </div> -->
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Start</label>
                <div class="col-sm-4">
                    <input type="datetime-local"  name = 'startTime' class="form-control" value="<%= connection.startTime%>" required>
                </div>
            
                <label  class="col-sm-2 col-form-label" >End</label>
                <div class="col-sm-4">
                    <input type="datetime-local"  name = 'endTime' class="form-control" value="<%= connection.endTime%>" required>
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label" >Image URL</label>
                <div class="col-sm-10">
                    <input type="text" name = 'imageURL' class="form-control" value="<%= connection.imageURL%>" required>
                </div>
            </div>
            <div class="btn-submit">
                <button class="btn btn-primary">Submit</button>
                <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
            </div>
        </form>
    </div>  
    <%- include('../partials/footer.ejs')%>
</body>
</html>