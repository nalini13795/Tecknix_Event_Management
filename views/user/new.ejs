<%- include('../partials/header.ejs')%>
<div class="container-fluid">
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <h2 class="fadeIn first">Sign Up</h2>
          <form action = '/user/signup' method = 'POST'>
            <input type="text" id="firstName" class="signup-input" name="firstName" placeholder="First Name" required>
            <input type="text" id="lastName" class="signup-input" name="lastName" placeholder="Last Name" required>
            <input type="email" id="email" class="signup-input" name="email" placeholder="Email" required>
            <input type="password" id="password" class="signup-input" name="password" placeholder="Password" required minlength="8" maxlength="64">
            <input type="submit" value="Sign Up">
          </form>
        </div>
      </div>
</div>  
<%- include('../partials/footer.ejs')%>
</body>
</html>